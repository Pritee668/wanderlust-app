<% layout('/layouts/boilerplate') -%>

<body>
    <br>
  <h3 style="text-align: center">Create new Listings</h3>
  <div class="row">
    <div class="col-8 offset-2">
      <form method="post" action="/listings" novalidate class="needs-validation">
        <div class="mb-2">
          <label for="title" class="form-label">Title</label>
          <input
            type="tex"
            name="listing[title]"
            placeholder="Enter title"
            class="form-control"
            required
          />
          <div class="valid-feedback">Its looks good!</div>
        </div>
        <div class="mb-2">
          <label for="description" class="form-label">Description</label>
          <textarea
            name="listing[description]"
            placeholder="Enter description"
            type="text"
            class="form-control"
            required
          >
        </textarea>
        <div class="invalid-feedback">Enter short description</div>
        </div>

        <div class="mb-2">
          <label for="image" class="form-label">Image</label>
          <input
            type="text"
            name="listing[image]"
            placeholder="Enter image url"
            class="form-control"
          />
        </div>
        <div class="row">
          <div class="mb-2 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input
              name="listing[price]"
              placeholder="Enter price"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Enter valid price!</div>

            <div class="mb-2 col-md-8">
              <label for="country" class="form-label">Country</label>
              <input
                type="text"
                name="listing[country]"
                placeholder="Enter country"
                class="form-control"
                required
              />
              <div class="invalid-feedback">Enter country name</div>
            </div>
          </div>
        </div>
        <div class="mb-2">
          <label for="location" class="form-label">Location</label>
          <input
            type="text"
            name="listing[location]"
            placeholder="Enter location"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Enter location name</div>
        </div>
        <button class="btn btn-col">Add</button>
      </form>
    </div>
  </div>
</body>
