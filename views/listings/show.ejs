<% layout('/layouts/boilerplate') -%>

    <body>
    <h3 style="text-align: center;">List in details</h3>

    <div class="row">
        <div class="col-8 offset-3">
            <div class="card">
            <img src="<%=listing.image%>" class="car show-img" alt="listing-image">
            <div class="card-body">
              <p class="card-text"><b><%=listing.title%></b><br>
                <%= listing.description%><br>
                &#8377;<%=listing.price.toLocaleString("en-IN")%>/night<br>
                <%= listing.location%><br>
                <%= listing.country%><br>
                 </p>
             </div>
            </div>
    <div class="btns">
    <a href="/listings/<%=listing._id%>/edit" class="btn btn-primary">Edit this listing</a>
    <form method="post" action="/listings/<%=listing._id%>?_method=DELETE">
        <button class="btn btn-col">Delete</button>
    </form>
</div>
</div>
</div>
    </body>
